@model LabWork_5.Models.Lab1Model
@{ ViewData["Title"] = "PR1"; }
<h1>@ViewData["Title"]</h1>
<h3>Заданы три числа: a, b, c. Необходимо выяснить, можно ли так переставить цифры в числах a и b, чтобы в сумме получилось c.</h3>

<form method="post" enctype="multipart/form-data" asp-controller="Labs" asp-action="PR1">
    <div class="form-group">
        <label for="pdata">Data</label>
        <input type="text" class="form-control" id="pdata" asp-for="Data">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

@if (Model != null)
            {
<div class="container mt-5">
    @if (Model.Calculated)
    {
        <div class="row">
            <label for="presponse">Response</label>
            <input type="text" id="presponse" value="@Model.Response">
        </div>
    }
    @if (!String.IsNullOrEmpty(Model.ErrorValue))
    {
        <div class="row">
            <label for="perror">Response</label>
            <input type="text" id="perror" value="@Model.ErrorValue">
        </div>
    }
</div>
}